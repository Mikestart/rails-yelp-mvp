<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

  <% @restaurant.reviews.each do |review, rating| %>
    <li class="list-group-item"> Comment = <%= review.content %> </li>
      <li class="list-group-item"> Rating = <%= review.rating %></li>
  <% end %>


<%= link_to "Go back to restaurants", restaurants_path %>
<%= link_to "Leave a Review", new_restaurant_review_path(@restaurant) %>
